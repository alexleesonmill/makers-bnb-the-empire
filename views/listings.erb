<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :head_css %>
    <meta charset="UTF-8">
  </head>

  <body>
  <%= erb :header %>
  <%= erb :navbar %>
  <header>
<br>
      <h3 align="center">
        MakersBnB Spaces
      </h3><br>

    </header>

    <main>
      <div id="master" style="width: 90%; margin: 0 auto;">
        <div class="row">
        <% @spaces.each do |entry| %>
            <div class="col-sm-6">
              <div class="card" style="margin-bottom: 30px;">
                <div class="card-body">
                  <ul>
                    <h5 class="card-title"><%= entry.name %></h5>
                    <p class="card-text"><%= entry.description %></p>
                    <p class="card-text">Location: <%= entry.location %>
                    <br>Price: Â£<%= entry.price %>
                    <% user = User.find(id: entry.user_id) %>
                    <br>Host: <%= @user.name %></p>
                    <p align="center"><a href="#" class="btn btn-lg btn-primary btn-block" style="background-color: #20B2AA; border: 0px;">Book Space</a></p>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>


